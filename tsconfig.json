{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@shared/*": ["shared/*"],
      "@widgets/*": ["widgets/*"],
      "@features/*": ["features/*"],
      "@entities/*": ["entities/model/*"]
    },
    "jsx": "react-jsx",
    "target": "ES2022",
    "noEmit": false,

    "module": "ESNext",
    "moduleResolution": "bundler",

    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleSuffixes": [".ts", ".tsx", ""]
  }
}
